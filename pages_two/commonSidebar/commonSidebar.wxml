<view class='fc-red bc-white p-20 m-30 radius-8 middle relative' style="animation: {{index%2==0?' right-left':'left-right'}} {{index*0.2+2}}s  1" wx:for="{{Arr}}" wx:key="{{}}" catchtap='chooseBox' data-title="{{item.cont}}" data-index="{{item.text}}">
  {{item.title}}
  <text class='fc-purple'>{{item.txt}}</text>
   <tag-lsz   type="{{index%2==0?'circle':'no'}}" class='absolute' style='top:-10rpx;left:0'  color="{{index%2==0?'#8dc63f':'#0081ff'}}">抽屉式</tag-lsz>
