/* pages/swiper/swiper.wxss */

.tower-swiper .tower-item {
  transform: scale(calc(0.5 + var(--index) / 10));
  margin-left: calc(var(--left) * 100rpx - 150rpx);
  z-index: var(--index);
}

/* 层叠式 二轮播图样式 */

.tower-swiper2 .tower-item2 {
  transform: scale(calc(0.5 + var(--index) / 10));
  margin-left: calc(var(--left) * 100rpx - 150rpx);
  z-index: var(--index);
}

.tower-swiper2 {
  height: 420rpx;
  position: relative;
  padding: 30rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
}

.tower-swiper2 .tower-item2 {
  position: absolute;
  width: 100%;
  height: 380rpx;
  top: 0;
  bottom: 0;
  /* left: 50%; */
  margin: auto;
  transition: all 0.2s ease-in 0s;
  opacity: 1;
}

.tower-swiper2 .tower-item2.none2 {
  opacity: 0;
}

.tower-swiper .tower-item .swiper-item {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
  overflow: hidden;
}

.tower2_img2 {
  width: 100%;
}
